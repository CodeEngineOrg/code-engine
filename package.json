{
  "name": "code-engine",
  "version": "0.0.2",
  "description": "build tool | code generator | static site builder",
  "keywords": [
    "build-tool",
    "asset-pipeline",
    "code-generator",
    "code-generation",
    "static-site-builder",
    "static-site-generator",
    "static",
    "site",
    "website",
    "blog",
    "docs",
    "documentation",
    "generator",
    "build",
    "make",
    "tool",
    "pipeline",
    "parallel"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://engine.codes",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeEngineOrg/code-engine.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "code-engine": "bin/code-engine.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage lib",
    "lint": "npm run lint:typescript && npm run lint:javascript",
    "lint:typescript": "tslint -p tsconfig.json",
    "lint:javascript": "eslint test",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "engines": {
    "node": ">=12.12"
  },
  "engineStrict": true,
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.6",
    "chai": "^4.2.0",
    "chai-exec": "^1.1.2",
    "coveralls": "^3.0.4",
    "eslint": "^6.8.0",
    "eslint-config-modular": "^7.0.0",
    "mocha": "^7.0.0",
    "npm-check": "^5.9.0",
    "nyc": "^15.0.0",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.12",
    "tslint": "^5.17.0",
    "tslint-modular": "^1.4.1",
    "typescript": "^3.7.4",
    "typescript-tslint-plugin": "^0.5.0",
    "version-bump-prompt": "^5.0.7"
  },
  "dependencies": {
    "@code-engine/cli": "0.0.10",
    "@code-engine/lib": "0.0.16",
    "@code-engine/types": "0.0.12"
  }
}
