{
  "name": "code-engine",
  "version": "0.0.6",
  "description": "build tool | code generator | static site builder",
  "keywords": [
    "build-tool",
    "asset-pipeline",
    "code-generator",
    "code-generation",
    "static-site-builder",
    "static-site-generator",
    "static",
    "site",
    "website",
    "blog",
    "docs",
    "documentation",
    "generator",
    "build",
    "make",
    "tool",
    "pipeline",
    "parallel"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://engine.codes",
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeEngineOrg/code-engine.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "code-engine": "bin/code-engine.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage lib",
    "lint": "npm run lint:typescript && npm run lint:javascript",
    "lint:typescript": "tslint -p tsconfig.json",
    "lint:javascript": "eslint test",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha && npm run lint",
    "coverage": "nyc node_modules/mocha/bin/mocha",
    "upgrade": "npm-check -u && npm audit fix",
    "bump": "bump --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "engines": {
    "node": ">=12.12"
  },
  "engineStrict": true,
  "devDependencies": {
    "@jsdevtools/chai-exec": "^2.1.1",
    "@jsdevtools/eslint-config-modular": "^8.0.4",
    "@jsdevtools/tslint-modular": "^2.0.7",
    "@jsdevtools/version-bump-prompt": "^6.0.6",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.23",
    "chai": "^4.2.0",
    "eslint": "^7.5.0",
    "mocha": "^8.0.1",
    "npm-check": "^5.9.0",
    "nyc": "^15.1.0",
    "shx": "^0.3.2",
    "source-map-support": "^0.5.19",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7",
    "typescript-tslint-plugin": "^0.5.0"
  },
  "dependencies": {
    "@code-engine/cli": "^1.0.2",
    "@code-engine/lib": "^1.0.2",
    "@code-engine/types": "^1.0.7"
  }
}
